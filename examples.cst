# Примеры использования CvadroScript

# Пример 1: Функция сортировки пузырьком (упрощенная версия)
def bubble_sort_step(arr: int, n: int) -> void:
    let i: int = 0
    while i < n - 1:
        if arr > 10:  # Упрощенная логика для демонстрации
            pass
        i = i + 1

# Пример 2: Логические операции
def logic_example(a: bool, b: bool) -> bool:
    let result1: bool = a and b
    let result2: bool = a or b
    let result3: bool = not a
    return result1

# Пример 3: Арифметические операции
def math_example(x: int, y: int) -> int:
    let sum: int = x + y
    let diff: int = x - y
    let product: int = x * y
    let quotient: int = x / y
    return sum + diff

# Пример 4: Условные выражения
def grade_check(score: int) -> string:
    if score >= 90:
        return "Отлично"
    else:
        if score >= 70:
            return "Хорошо"
        else:
            return "Удовлетворительно"

# Пример 5: Цикл с вложенными условиями
def find_max(limit: int) -> int:
    let max_val: int = 0
    let i: int = 1
    while i <= limit:
        if i > max_val:
            max_val = i
        i = i + 1
    return max_val
